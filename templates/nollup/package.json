{
  "name": "routify-app",
  "version": "1.0.0",
  "@comments scripts": {
    "dev": "run all dev:* scripts",
    "dev:routify": "generate Routify's routes.js on filechange",
    "build": "run all build:* scripts",
    "build:routify": "build routify",
    "serve": "serve content in 'dist' folder",
    "dev:rollup": "develop with features like SSR and serviceworker enabled",
    "build:rollup": "build rollup"
  },
  "scripts": {
    "dev": "run-p dev:routify dev:nollup",
    "dev:routify": "routify",
    "serve": "run-p serve:*",
    "serve:spa": "spassr",
    "serve:ssr": "spassr --ssr --port 5005",
    "build": "cross-env NODE_ENV=production run-s build:*",
    "build:routify": "routify -b",
    "test": "npm run test:dev && npm run test:build",
    "test:dev": "node test/lib/wrapper dev ava test/{common,dev}/**/*.test.js",
    "test:build": "node test/lib/wrapper build ava test/{common,build}/**/*.test.js",
    "dev:rollup": "rollup -cw",
    "build:rollup": "rollup -c",
    "dev:nollup": "nollup -c",
    "dev:ssr": "run-p dev:routify dev:rollup serve",
    "build:static": "spank",
    "dev:snowpack": "snowpack dev",
    "build:snowpack": "snowpack build"
  },
  "devDependencies": {
    "@roxi/routify": "^2.14.0",
    "@ava/cooperate": "^0.1.0",
    "fkill": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "svelte": "^3.35.0",
    "playwright": "^1.8.0",
    "cross-env": "^7.0.3",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "rollup": "^2.41.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.1.0",
    "rollup-plugin-hot": "^0.1.1",
    "rollup-plugin-svelte-hot": "^0.13.0",
    "rollup-plugin-terser": "^7.0.2",
    "spassr": "^2.2.3",
    "nollup": "^0.15.3",
    "spank": "^1.5.0",
    "@snowpack/plugin-dotenv": "^2.0.5",
    "@snowpack/plugin-svelte": "^3.5.2",
    "snowpack": "^3.0.13",
    "svelte-preprocess": "^4.6.3",
    "postcss": "^8.2.4",
    "autoprefixer": "^10.2.3",
    "cssnano": "^4.1.10",
    "postcss-import": "^13.0.0",
    "tailwindcss": "^2.0.2"
  },
  "routify": {
    "extensions": "svelte,html,svx,md"
  },
  "@comment options": [
    "config provides defaults for spassr, spank, tossr and poindexter.",
    "You can delete the field and this comment, if you use neither."
  ],
  "app_config": {
    "assets": "public",
    "script": "public/build/main.js",
    "template": "public/__app.html",
    "port": 5000
  },
  "spassr": {
    "assetsDir": [
      "public"
    ],
    "entrypoint": "public/__app.html",
    "script": "public/build/main.js",
    "ssrOptions": {
      "inlineDynamicImports": true
    }
  },
  "spank": {
    "entrypoint": "public/__app.html",
    "script": "public/build/main.js"
  },
  "ava": {
    "verbose": true
  },
  "workspaces": [
    "../../*"
  ]
}