{
  "name": "svelte-app2",
  "version": "1.0.0",
  "@comments scripts": {
    "dev": "run all dev:* scripts",
    "dev:routify": "generate Routify's routes.js on filechange",
    "build": "run all build:* scripts",
    "build:routify": "build routify",
    "serve": "serve content in 'dist' folder"
  },
  "scripts": {
    "dev": "run-p dev:*",
    "dev:routify": "routify",
    "serve": "run-p serve:*",
    "serve:spa": "spassr",
    "serve:ssr": "spassr --ssr --port 5005",
    "build": "run-s build:*",
    "build:routify": "routify -b",
    "dev:snowpack": "snowpack dev",
    "build:snowpack": "snowpack build"
  },
  "devDependencies": {
    "@roxi/routify": "^2.5.1-next-major",
    "npm-run-all": "^4.1.5",
    "svelte": "^3.30.1",
    "@snowpack/plugin-dotenv": "^2.0.5",
    "@snowpack/plugin-svelte": "^3.4.0",
    "snowpack": "^2.18.4"
  },
  "routify": {
    "extensions": "svelte,html,svx,md"
  },
  "@comment options": [
    "config provides defaults for spassr, spank, tossr and poindexter.",
    "You can delete the field and this comment, if you use neither."
  ],
  "options": {
    "assets": "assets",
    "dist": "dist",
    "script": "dist/build/main.js",
    "template": "assets/__app.html",
    "port": 5000
  },
  "spassr": {
    "assetsDir": [
      "dist",
      "assets"
    ],
    "entrypoint": "assets/__app.html",
    "script": "dist/build/main.js",
    "ssrOptions": {
      "inlineDynamicImports": true
    }
  }
}